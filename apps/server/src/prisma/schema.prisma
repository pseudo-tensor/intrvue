generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id               String     @id @default(uuid())
  email                 String     @unique
  username              String     @unique
  name                  String
  password              String
  hosted_sessions        Session[]  @relation("HostedSessions")
  participated_sessions  Session[]  @relation("ParticipatedSessions")
}

enum SessionStatus {
  SCHEDULED
  ACTIVE
  ENDED
  CANCELLED
}

model Session {
  session_id      String    @id @default(uuid())
  host_id         String
  participant_id  String

  host            User      @relation("HostedSessions", fields: [host_id], references: [user_id])
  participant     User      @relation("ParticipatedSessions", fields: [participant_id], references: [user_id])

  status SessionStatus @default(SCHEDULED)
  date            DateTime  @default(now())
  code_data       String
  text_data       Json
}
